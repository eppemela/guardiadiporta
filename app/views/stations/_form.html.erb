<div class="col-lg-12">
  <div class="form-panel">
    <%= form_for(@station, :html => {:class => 'form-horizontal style-form'}) do |f| %>
    <% if @station.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@station.errors.count, "error") %> prohibited this station from being saved:</h2>
      <ul>
        <% @station.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="form-group">
      <label class="col-sm-2 col-sm-2 control-label"><%= f.label :name %></label>
      <div class="col-sm-10">
        <%= f.text_field(:name, class: "form-control") %>
      </div>
    </div> <%= puts "ciao " %>

    <div class="form-group">
      <label class="col-lg-2 col-sm-2 control-label"><%= f.label :mac_addr %></label>
      <div class="col-lg-10">
        <input class="form-control" id="disabledInput" type="text" placeholder="<%="#{@station.mac_addr}"%>" disabled="">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 col-sm-2 control-label"><%= f.label :last_seen %></label>
      <div class="col-sm-10">
        <%= f.datetime_select(:last_seen, {}, { class: "datetime-select" }) %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 col-sm-2 control-label"><%= f.label :ignore %></label>
      <div class="col-sm-10">
        <%= f.check_box :ignore,
        :data => { :size=>'small', 'on-color'=>'danger', 'off-color'=>'success', 'on-text'=>'YES', 'off-text'=>'NO' } %>

      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 col-sm-2 control-label">Actions</label>
      <div class="col-sm-10">
        <%= f.submit 'Submit', :class => 'btn btn-primary' %>
        <%= link_to(stations_path) do %>
        <button type="button" class="btn btn-default">
          <i class="fa fa-undo"></i> Back
        </button>
        <% end %>
      </div>
    </div>

    <% end %>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  $('input:checkbox').bootstrapSwitch();
});
</script>
