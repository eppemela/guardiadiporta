<% content_for :header do -%>
<%= stylesheet_link_tag 'lineicons' %>

<% end -%>

<% content_for :title, "Dashboard" %>

<div class="row mtbox">
  <div class="col-md-4 col-sm-4 box0">
    <div class="box1">
      <span class="li_key"></span>
      <h3>First to get in</h3>
    </div>
    <p><%= @first_in[:name] %> @ <%= DateTime.parse("#{@first_in[:arrival_time]}").strftime('%H:%M:%S') %> </p>
  </div>
  <div class="col-md-4 col-sm-4 box0">
    <div class="box1">
      <span class="li_lock"></span>
      <h3>Last to get out</h3>
    </div>
    <p><%= @last_out[:name] %> @ <%= DateTime.parse("#{@last_out[:leaving_time]}").strftime('%H:%M:%S') %> </p>
  </div>
  <div class="col-md-4 col-sm-4 box0">
    <div class="box1">
      <span class="li_user"></span>
      <h3>Total daily visits</h3>
    </div>
    <p> <%= @total_visits.to_a.count %> </p>
  </div>
</div>

<% unless @present_stations.empty? %>
<% @present_stations.each do |station,tempo| %>
<div class="col-md-4 mb">
  <div class="instagram-panel pn">
    <i class="fa fa-user fa-4x"></i>
    <p><%= link_to(station[:station].name || station[:station].mac_addr, station[:station], class: "azzurro") %><br>
      <i class="fa fa-thumb-tack"></i> last seen <%= time_ago_in_words(station[:station].last_seen) %> ago
    </p>
    <p>
      <i class="fa fa-sign-in"></i> <%= station[:station].sessions.opened_today.count %> |
      <i class="fa fa-clock-o"></i>
      <%= time_ago_in_words(station[:total_time].seconds.from_now) %>
    </p>
  </div>
</div>
<% end %>
<% else %>
<div class="col-lg-12">
  <div class="alert alert-info alert-dismissable text-center">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <b>Heads up!</b> There is nobody around.
  </div>
</div>
<% end %>
